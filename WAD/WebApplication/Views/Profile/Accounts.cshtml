@model WebApplication.Models.NewAccountViewModel
@{
    ViewBag.Title = "Accounts";
}
<div class="nav-tabs-custom">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#activity" data-toggle="tab">My accounts</a></li>
        <li><a href="#timeline" data-toggle="tab">New account</a></li>
    </ul>
</div>
<div class="tab-content">
    <div class="active tab-pane" id="activity">
        @{
            ViewBag.Title = "MyAccounts";
        }

        <div class="table-responsive mailbox-messages">
            <table class="table table-hover table-striped">
                <tbody>
                    <tr>
                        <th class="mailbox-name"><a href="#">IBAN</a></th>
                        <th class="mailbox-name"><a href="#">Currency</a></th>
                        <th class="mailbox-name"><a href="#">Card limits</a></th>
                    </tr>
                    <tr>
                        <td class="mailbox-name"><a href="#">IBAN1</a></td>
                        <td class="mailbox-name"><a href="#">Currency1</a></td>
                        <td class="mailbox-name"><a href="#">Card limits1</a></td>
                    </tr>
                    <tr>
                        <td class="mailbox-name"><a href="#">IBAN1</a></td>
                        <td class="mailbox-name"><a href="#">Currency1</a></td>
                        <td class="mailbox-name"><a href="#">Card limits1</a></td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

    <div class="tab-pane" id="timeline">
        @{
            ViewBag.Title = "NewAccount";
        }

        <h2>NewAccount</h2>

        @using (Html.BeginForm()) 
        {
            @Html.AntiForgeryToken()
    
            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.IBAN, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IBAN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IBAN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Currency, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Currency, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(model => model.CardLimit, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CardLimit, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CardLimit, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>

</div>
