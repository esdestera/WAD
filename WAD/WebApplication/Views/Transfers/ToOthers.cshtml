@{
    /**/

    ViewBag.Title = "Transfers";
}
<style>
    table, th, td {
        border: 1px;
        padding: 10px;
    }

    table {
        border-spacing: 15px;
    }

    .a {
        height: 27px;
        width: 225px
    }

    .b {
        text-align: center;
    }
</style>


@{

    if (IsPost)
    {
        string from = Request.Form["From"];
        string to = Request.Form["To"];
        string amount = Request.Form["Amount"];
        string details = Request.Form["Details"];
        /*if (Validation.IsValid())
        {*/
        <text>
            You entered: <br />
            From: @from <br />
            To: @to <br />
            Amount: @amount <br />
            Deta: @details <br />
        </text>

    }
}
<div align="center">
    <h2>Transfers to others </h2>
    <form method="post">
        <fieldset>
            <table>
                <tr>
                    <td><label for="Name">Name</label></td>
                    <td>
                        <input type="text" name="Name"
                               value="@Request.Form["Name"]" size="30"/>
                    </td>
                </tr>
                <tr>
                    <td><label for="IBAN">IBAN</label></td>
                    <td>
                        <input type="text" name="IBAN"
                               value="@Request.Form["IBAN"]" size="30"/>
                    </td>
                </tr>
                <tr>
                  
                        <td><label for="From" name="From">From </label></td>
                        <td>
                            <select id="accounts" name="accountList" class="a" >
                                <option value="0" >account1</option>
                                <option value="1">account2</option>
                                <option value="2">account3</option>
                            </select>
                        </td>
                   
                </tr>

                <tr>
                    <td>
                        <label for="Ammount">The amount of money </label>
                    </td>
                    <td>
                        <input type="text" name="amount"
                               value="@Request.Form["Amount"]" size="30"/>
                    </td>
                  
                </tr>
                <tr>
                    <td><label for="details">Details</label></td>
                    <td>
                        <input type="text" name="details"
                               value="@Request.Form["Details"]" size="30"/>
                    </td>
                </tr>
            </table>
            <input type="button" value="Cancel" onclick="window.location = 'http://localhost:51201/Home/Index'" class="cancel_button">

            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
            <input type="submit" value="Continue" class="submit" />

        </fieldset>
    </form>
</div>
